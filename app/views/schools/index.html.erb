<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Appschool name</th>
      <th>School gid</th>
      <th>Comments</th>
      <th>School address</th>
      <th>School url</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.appschool_name %></td>
        <td><%= school.school_gid %></td>
        <td><%= school.comments %></td>
        <td><%= school.school_address %></td>
        <td><%= school.school_url %></td>
        <td><%= school.comments %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

